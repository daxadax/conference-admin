%html
%head
  %title ADMIN

  %link{rel: "stylesheet", type: 'text/css', href: url('stylesheets/bootstrap.min.css')}
  %link{rel: "stylesheet", type: 'text/css', href: url('stylesheets/darkly-bootstrap.min.css')}
  %link{rel: 'stylesheet', type: 'text/css', href: url('stylesheets/custom.css')}
  %link{rel: 'stylesheet', type: 'text/css', href: url('stylesheets/admin.css')}


%body
  - if @show_header
    #header
      = display_partial "layouts/header"
  #content
    .container
      = display_partial 'layouts/alert' if messages.any?
      = yield

%script{src: url('javascripts/jquery-3.4.1.min.js')}
%script{src: url('javascripts/darkly-bootstrap.min.js')}
%script{src: url('javascripts/main.js')}
